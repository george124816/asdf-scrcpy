#!/usr/bin/env bash

GH_REPO="https://github.com/Genymobile/scrcpy"

get_platform() {
  case "$(uname -s)" in
    Linux)
      echo "linux-x86_64"  # You can expand this to detect more specific Linux architectures if needed
      ;;
    Darwin)
      # macOS
      case "$(uname -m)" in
        x86_64)
          echo "macos-x86_64"
          ;;
        arm64)
          echo "macos-aarch64"
          ;;
        *)
          echo "unknown"
          ;;
      esac
      ;;
    MINGW* | MSYS* | CYGWIN*)
      # Windows
      case "$(uname -m)" in
        x86_64)
          echo "win64"
          ;;
        i686)
          echo "win32"
          ;;
        *)
          echo "unknown"
          ;;
      esac
      ;;
    *)
      echo "unknown"
      ;;
  esac
}

download_url(){
	local version=$1
  	local platform=$2

	url_download="$GH_REPO/releases/download/v$version/scrcpy-$platform-v$version.tar.gz"
	echo $url_download
}

download(){
	local version=$1
	local download_path=$2
	local platform=$(get_platform)
	local download_url=$(download_url $version $platform)


	echo $download_url
        curl "$download_url" -Lo "${download_path}/archive.tar.gz"
}

install(){
	local version=$1
	local install_path=$2
	local download_path=$3

	filename_path="$download_path/archive.tar.gz"

	mkdir -p "$install_path" || {
  		echo "ERRO ao criar pasta $install_path"
  		exit 1
	}

	if ! tar -xvf "$filename_path" -C "$install_path" --strip-components=1; then
		echo "Erro ao extrair o arquivo"
		exit 1
	fi
} 

download $ASDF_INSTALL_VERSION $ASDF_DOWNLOAD_PATH
install $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH $ASDF_DOWNLOAD_PATH
